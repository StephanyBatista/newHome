extends ../layout.pug

block content
    #pad-wrapper.new-user
        .row.header
            .col-md-12
            h3 Cadastro de usu√°rio
        .row.form-wrapper
            .col-md-9.with-sidebar
            form#form.form-horizontal(role='form')
                .form-group
                label.col-md-2.control-label(for='name') Nome
                .col-md-8
                    input#name.form-control(type='text', placeholder='Nome', name='name')
                .form-group
                label.col-md-2.control-label(for='email') E-mail
                .col-md-8
                    input#email.form-control(type='text', placeholder='E-mail', name='email')
                .form-group
                label.col-md-2.control-label(for='birthday') Data de Nascimento
                .col-md-8
                    input#birthday.form-control(type='text', placeholder='Data de Nascimento', name='birthday')
                .form-group
                label.col-md-2.control-label(for='password') Senha
                .col-md-8
                    input#password.form-control(type='password', placeholder='Senha', name='password')
                .form-group
                .col-md-offset-2.col-md-8
                    button#saveForm.btn.btn-default(click="postForm('form', '/api/v1/user', '/admin/user/list'); return false") Salvar
block script
    script(src='/js/view/http.js')
    script(src='/js/view/admin/user/create.js')